{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "api - build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/server/api/api.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "api - publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/server/api/api.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "api - watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/server/api/api.csproj"
            ],
            "problemMatcher": "$tsc"
        }
    ]
}
